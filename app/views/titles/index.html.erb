<p id="notice"><%= notice %></p>

<h1>Listing Titles</h1>

<table class="titles">
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Color</th>
      <th>Logo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @titles.each do |title| %>
      <tr>
        <td><a href="<%= title.url %>"><%= title.name %></a></td>
        <td class="logotype" style="background:<%= title.color %>"><%= title.logo.html_safe %></td>
        <td><%= link_to 'Show', title %> | <%= link_to 'Edit', edit_title_path(title) %> | <%= link_to 'Destroy', title, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

