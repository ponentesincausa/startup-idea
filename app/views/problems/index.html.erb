<h1>Listing Problems</h1>

<table class="titles">
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Color</th>
      <th>Logo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @problems.each do |problem| %>
      <tr>
        <td><a href="<%= problem.url %>"><%= problem.name %></a></td>
        <td class="logotype" style="background:<%= problem.color %>"><%= problem.logo.html_safe %></td>
        <td><%= link_to 'Show', problem %> | <%= link_to 'Edit', edit_problem_path(problem) %> | <%= link_to 'Destroy', problem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

